# Database connection string for MySQL 8 (native)
# Get this from your MySQL provider (e.g., reg.ru, PlanetMySQL, etc.)
DATABASE_URL="mysql://username:password@hostname:3306/database?schema=public"

# JWT secret key for authentication
JWT_SECRET="your-super-secret-jwt-key-change-in-production"

# Frontend URL for CORS (замените на ваш домен фронтенда)
FRONTEND_URL="https://your-frontend-domain.com"

# Application port
PORT=5000

# Optional: Email configuration
# SMTP_HOST="smtp.example.com"
# SMTP_PORT=587
# SMTP_USER="your-email@example.com"
# SMTP_PASS="your-email-password"
