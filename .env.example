# Database connection string for MySQL 8 (native)
# Get this from your MySQL provider (e.g., reg.ru, PlanetMySQL, etc.)
DATABASE_URL="mysql://username:password@hostname:3306/database"

# JWT secret key for authentication (can be empty for development)
JWT_SECRET=""

# Disable authentication (set to 'true' for development without JWT)
DISABLE_AUTH="true"

# Frontend URL for CORS (замените на ваш домен фронтенда)
FRONTEND_URL="https://your-frontend-domain.com"

# Backend URL (Railway会自动设置此值)
# BACKEND_URL="https://your-backend-app.up.railway.app"

# Application port
PORT=5000

# Optional: Email configuration
# SMTP_HOST="smtp.example.com"
# SMTP_PORT=587
# SMTP_USER="your-email@example.com"
# SMTP_PASS="your-email-password"
