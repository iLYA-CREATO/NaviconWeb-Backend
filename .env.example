# Database connection string for PostgreSQL
# Get this from Railway's PostgreSQL service (or your own PostgreSQL provider)
DATABASE_URL="postgresql://username:password@hostname:5432/database?schema=public"

# JWT secret key for authentication
JWT_SECRET="your-super-secret-jwt-key-change-in-production"

# Frontend URL for CORS (замените на ваш домен фронтенда)
FRONTEND_URL="https://your-frontend-domain.com"

# Application port (Railway sets this automatically via PORT env var)
PORT=5000

# Optional: Email configuration
# SMTP_HOST="smtp.example.com"
# SMTP_PORT=587
# SMTP_USER="your-email@example.com"
# SMTP_PASS="your-email-password"
