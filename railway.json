{
  "$schema": "https://railway.app/schema.json",
  "build": {
    "builder": "NIXPACKS",
    "options": {
      "nodejs": {
        "distro": "ubuntu22.04",
        "version": "18"
      }
    }
  },
  "deploy": {
    "startCommand": "node backend/server.js",
    "healthcheckPath": "/api/health",
    "healthcheckTimeout": 30,
    "restartPolicy": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
